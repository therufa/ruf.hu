    "start:dev": "sirv public --single --dev",
  },
  "dependencies": {
    "autoprefixer": "^10.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "sirv-cli": "^1.0.0",
    "svelte": "^3.0.0",
    "tailwindcss": "^2.0.2"
  }
}
