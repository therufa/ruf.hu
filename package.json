{
  "name": "hu.ruf._homepage",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npm run build:tailwind",
    "dev": "run-p start:dev watch:tailwind",
    "start": "sirv public --single",
    "watch:tailwind": "postcss public/tailwind.css -o public/index.css -w",
